<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_form_custom" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group>
                    <field name="campo_a_mostrar"/>
                </group>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="mostrar_partes_seleccionadas"
                        type="object"
                        string="Mostrar Mensaje"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>

    <record id="view_sale_order_popup" model="ir.ui.view">
        <field name="name">sale.order.popup.form</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <form string="Mensaje">
                <sheet>
                    <group>
                        <field name="campo_a_mostrar" readonly="1"/>
                    </group>
                    <footer>
                        <button string="Cerrar" class="oe_highlight" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
